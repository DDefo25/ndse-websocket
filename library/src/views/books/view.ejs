<%- include('../port/layoutStart', {title: book.title}) %>
<%- include('../port/menu') %>

<h1><%= book.title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= book.authors %></h5>
                <img src="<%= book.id %>/download/fileCover" class="border rounded w-50" alt="Cover">
                <p class="card-text"><%= book.description %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="./update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="./delete/<%= book.id %>" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<form class="input-group mb-3 mt-3" id="commentary-form">
    <input type="text" class="form-control commentary-input" id="commentary-input" placeholder="Комментарий" aria-label="Комментарий" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Отправить</button>
</form>

<ul class="list-group" id="commentary-messages"></ul>


<%- include('../port/layoutEndBook', {bookId: book.id}) %>