<form method="POST" class="mt-5">
    <div class="form-group mb-3">
        <label for="inputTitle">Название</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group mb-3">
        <label for="inputTitle">Автор</label>
        <input type="text"
               value="<%= book.authors %>"
               name="authors"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group mb-3">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= book.description %></textarea>
    </div>
    
    <div class="form-group mb-3">
        <label for="fileCover" class="form-label">Обложка</label>
        <input type="file" 
                name='fileCover' 
                accept="image/png, image/jpeg" 
                class="form-control-file" 
                id="fileCover">
    </div>

    <div class="form-group mb-3">
        <label for="fileBook" class="form-label">Файл</label>
        <input type="file" 
                name='fileBook' 
                class="form-control-file" 
                id="fileBook">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary" formenctype="multipart/form-data">Сохранить</button>
    </div>
</form>